<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="32dp"
    app:cardCornerRadius="12dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imgPoster_ItemLatestNewsRecruiters"
            android:layout_width="330dp"
            android:layout_height="147dp"
            android:src="@drawable/poster_latestnews" />

        <TextView
            android:id="@+id/tvTitle_ItemLatestNewsRecruiters"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:lineHeight="21dp"
            android:text="Dấu Giáp Lai là gì?"
            android:textColor="@color/Blue"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvContent_ItemLatestNewsRecruiters"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="3dp"
            android:layout_marginRight="8dp"
            android:lineHeight="18dp"
            android:text="Trên giấy tờ, tài liệu quan trọng bạn thường thấy có dấu giáp lai đỏ"
            android:textColor="@color/Dark_Gray"
            android:textSize="15sp" />

        <LinearLayout
            android:layout_marginBottom="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="3dp"
            android:layout_marginRight="8dp">

            <TextView
                android:id="@+id/tvAuthor_ItemLatestNewsRecruiters"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lineHeight="18dp"
                android:text="Trương Diệp Chi"
                android:textColor="@color/Blue"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tvDateSubmit_ItemLatestNewsRecruiters"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lineHeight="18dp"
                android:text="- 05/05/2021"
                android:textColor="@color/Dark_Gray"
                android:textSize="15sp" />
        </LinearLayout>

    </LinearLayout>


</androidx.cardview.widget.CardView>