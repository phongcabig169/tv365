<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llLayout_ItemNewsCandidate"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:background="@drawable/bg_frame_color_blue"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/imgAvatar_ItemNewsCandidate"
        android:layout_width="130dp"
        android:layout_height="140dp"
        android:layout_gravity="center"
        android:padding="16dp"
        android:src="@drawable/avatar_candidate" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:orientation="vertical"
        android:padding="8dp">

        <TextView
            android:textAllCaps="true"
            android:id="@+id/tvName_ItemNewsCandidate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lineHeight="18dp"
            android:text="PHẠM THi TUYẾT"
            android:textColor="@color/Blue"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:textAllCaps="false"
            android:id="@+id/tvCareer_ItemNewsCandidate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:lineHeight="14dp"
            android:text="Kinh doanh, Kế toán"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:textAllCaps="false"
            android:id="@+id/tvSalary_ItemNewsCandidate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:lineHeight="14dp"
            android:text="$ 6 - 7 triệu"
            android:textColor="@color/Red"
            android:textSize="12sp" />

        <TextView
            android:textAllCaps="false"
            android:id="@+id/tvView_ItemNewsCandidate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:drawableLeft="@drawable/icon_eye"
            android:drawablePadding="8dp"
            android:lineHeight="12dp"
            android:text="10 lượt xem"
            android:textColor="@color/Gray"
            android:textSize="10sp" />

        <TextView
            android:textAllCaps="false"
            android:id="@+id/tvAddress_ItemNewsCandidate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:background="@drawable/bg_color_yellow"
            android:lineHeight="12dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:text="Hà Nội"
            android:textColor="@color/white"
            android:textSize="10sp" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_color_red"
        android:lineHeight="16dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:text="Mới"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:textStyle="bold" />
</LinearLayout>