<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_gray"
    android:weightSum="10"
    android:orientation="vertical">

  <LinearLayout
      android:id="@+id/linearLayout2"
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_weight="3"
      android:background="@color/light_gray"
      android:fitsSystemWindows="true"
      android:orientation="vertical"
      android:paddingTop="30dp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent">

    <ImageView
        android:paddingVertical="10dp"
        android:id="@+id/back_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingHorizontal="20dp"
        android:src="@drawable/long_arrow_left_ic" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:paddingBottom="30dp"
        android:text="Cập nhật kinh nghiệm làm việc"
        android:textAllCaps="true"
        android:textColor="@color/blue"
        android:textSize="18sp" />

    <EditText
        android:layout_width="0dp"
        android:layout_height="0dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingHorizontal="25dp"
        android:text="Chức danh vị trí"
        android:textColor="@color/blue"
        android:textStyle="bold" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginHorizontal="25dp"
        android:layout_marginBottom="10dp"
        android:height="40dp"
        android:background="@drawable/bg_card_edit_profile"
        android:elevation="5dp"
        android:hint="Nhập chức danh vị trí"
        android:paddingHorizontal="15dp"
        android:textColor="@color/black"
        android:textColorHint="@color/black_250"
        android:textCursorDrawable="@drawable/text_cursor"
        android:textSize="15sp"
        tools:ignore="UnusedAttribute" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingHorizontal="25dp"
        android:text="Tên công ty"
        android:textColor="@color/blue"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/choose_city"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginHorizontal="25dp"
        android:layout_marginBottom="10dp"
        android:height="40dp"
        android:background="@drawable/bg_card_edit_profile"
        android:elevation="5dp"
        android:hint="Nhập tên công ty"
        android:paddingHorizontal="15dp"
        android:textColor="@color/black"
        android:textColorHint="@color/black_250"
        android:textCursorDrawable="@drawable/text_cursor"
        android:textSize="15sp"
        tools:ignore="UnusedAttribute" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingHorizontal="25dp"
        android:text="Ngày bắt đầu"
        android:textColor="@color/blue"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/edit_day_start"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginHorizontal="25dp"
        android:layout_marginBottom="10dp"
        android:height="40dp"
        android:background="@drawable/bg_card_edit_profile"
        android:drawableEnd="@drawable/calendar_ic"
        android:drawableRight="@drawable/calendar_ic"
        android:elevation="5dp"
        android:focusable="false"
        android:hint="Ngày bắt đầu"
        android:paddingHorizontal="15dp"
        android:textColor="@color/black"
        android:textColorHint="@color/black_250"
        android:textCursorDrawable="@drawable/text_cursor"
        android:textSize="15sp"
        tools:ignore="UnusedAttribute" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingHorizontal="25dp"
        android:text="Ngày kết thúc"
        android:textColor="@color/blue"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/edit_day_end"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginHorizontal="25dp"
        android:layout_marginBottom="10dp"
        android:height="40dp"
        android:background="@drawable/bg_card_edit_profile"
        android:drawableEnd="@drawable/calendar_ic"
        android:drawableRight="@drawable/calendar_ic"
        android:elevation="5dp"
        android:focusable="false"
        android:hint="Ngày kết thúc"
        android:paddingHorizontal="15dp"
        android:textColor="@color/black"
        android:textColorHint="@color/black_250"
        android:textCursorDrawable="@drawable/text_cursor"
        android:textSize="15sp"
        tools:ignore="UnusedAttribute" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingHorizontal="25dp"
        android:text="Thông tin bổ sung"
        android:textColor="@color/blue"
        android:textStyle="bold" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_marginHorizontal="25dp"
        android:layout_marginBottom="10dp"
        android:height="40dp"
        android:background="@drawable/bg_card_edit_profile"
        android:elevation="5dp"
        android:gravity="left|top"
        android:hint="Nhập thông tin bổ xung"
        android:paddingHorizontal="15dp"
        android:paddingVertical="6dp"
        android:textColor="@color/black"
        android:textColorHint="@color/black_250"
        android:textCursorDrawable="@drawable/text_cursor"
        android:textSize="15sp"
        tools:ignore="UnusedAttribute" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:paddingVertical="30dp">

      <androidx.appcompat.widget.AppCompatButton
          android:id="@+id/btn_update"
          android:layout_width="220dp"
          android:layout_height="35dp"
          android:background="@drawable/bg_btn_blue_10"
          android:text="Cập Nhật"
          android:textAllCaps="false"
          android:textColor="@color/white" />
    </LinearLayout>

  </LinearLayout>

</ScrollView>