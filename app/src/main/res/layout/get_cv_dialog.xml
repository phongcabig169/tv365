<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center">

    <LinearLayout
        android:elevation="5dp"
        android:orientation="vertical"
        android:id="@+id/toast_type"
        android:layout_width="320dp"
        android:paddingHorizontal="10dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_toast"
        android:backgroundTint="@color/white"
        android:gravity="center"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        tools:ignore="UnusedAttribute">

        <ImageView
            android:layout_marginVertical="10dp"
            android:id="@+id/toast_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/app_logo_medium" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_complete_profile"
            android:textColor="@color/black"
            android:layout_marginVertical="10dp"
            android:text="Hoàn thiện hồ sơ"
            android:textSize="15sp"
            android:textAllCaps="false"
            android:background="@drawable/bg_btn_dialog_gray"
            android:layout_width="220dp"
            android:layout_height="40dp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_upload_cv"
            android:textColor="@color/black"
            android:layout_marginVertical="10dp"
            android:text="Tải CV lên"
            android:textSize="15sp"
            android:textAllCaps="false"
            android:background="@drawable/bg_btn_dialog_gray"
            android:layout_width="220dp"
            android:layout_height="40dp"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_create_cv"
            android:textColor="@color/black"
            android:layout_marginTop="10dp"
            android:text="Tạo CV từ timviec365.net"
            android:textSize="15sp"
            android:textAllCaps="false"
            android:layout_marginBottom="30dp"
            android:background="@drawable/bg_btn_dialog_gray"
            android:layout_width="220dp"
            android:layout_height="40dp"/>
    </LinearLayout>

</LinearLayout>