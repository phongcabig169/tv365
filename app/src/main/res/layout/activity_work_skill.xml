<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_gray"
    android:weightSum="10"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:background="@color/light_gray"
        android:fitsSystemWindows="true"
        android:orientation="vertical"
        android:paddingTop="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/back_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="20dp"
            android:src="@drawable/long_arrow_left_ic" />

        <TextView
            android:paddingBottom="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="15dp"
            android:gravity="center_horizontal"
            android:text="cập nhật kỹ năng cá nhân"
            android:textAllCaps="true"
            android:textColor="@color/blue"
            android:textSize="18sp" />

        <EditText
            android:layout_width="0dp"
            android:layout_height="0dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="25dp"
            android:text="Kỹ năng bản thân "
            android:textColor="@color/blue"
            android:textStyle="bold" />

        <EditText
            android:layout_width="match_parent"
            android:paddingVertical="15dp"
            android:layout_height="200dp"
            android:gravity="top|left"
            android:layout_marginHorizontal="25dp"
            android:layout_marginBottom="10dp"
            android:height="40dp"
            android:background="@drawable/bg_card_edit_profile"
            android:elevation="5dp"
            android:hint="Viết kỹ năng bản thân ..."
            android:paddingHorizontal="15dp"
            android:textColor="@color/black"
            android:textColorHint="@color/black_250"
            android:textCursorDrawable="@drawable/text_cursor"
            android:textSize="15sp"
            tools:ignore="UnusedAttribute" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:paddingVertical="30dp">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_update"
                android:layout_width="220dp"
                android:layout_height="35dp"
                android:background="@drawable/bg_btn_blue_10"
                android:text="Cập Nhật"
                android:textAllCaps="false"
                android:textColor="@color/white" />
        </LinearLayout>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>