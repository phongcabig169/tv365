<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/Light_Pink"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Recruiters.activity.Manage_RecruimentNews">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/Light_Pink"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imgBack_RecruimentNewManage"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginLeft="19dp"
            android:layout_marginTop="24dp"
            android:src="@drawable/icon_back_color_gray" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:lineHeight="21dp"
            android:text="TIN TUYỂN DỤNG"
            android:textColor="@color/Blue"
            android:textSize="18sp" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcListRecruiment_RecruimentNewManage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="35dp"
                android:layout_marginRight="18dp" />

            <Button
                android:id="@+id/btnCreate_RecruimentNewManage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="54dp"
                android:background="@drawable/bg_color_blue"
                android:lineHeight="18dp"
                android:paddingLeft="62dp"
                android:paddingRight="62dp"
                android:text="Thêm Mới"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="15sp" />

        </LinearLayout>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>