<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.CandidateNewsFragment">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <fragment
            android:id="@+id/candidate_news_banner"
            android:name="com.example.tv365.fragment.CandidateNewsBannerFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <fragment
            android:id="@+id/candidate_news_icon"
            android:name="com.example.tv365.fragment.CandidateNewsIconFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <RelativeLayout
            android:layout_marginStart="18dp"
            android:layout_marginEnd="18dp"
            android:layout_marginTop="39dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="@string/typical_new"
                android:textSize="18sp"
                android:textColor="@color/purple_300"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tv_view_all_typical"
                android:layout_alignParentEnd="true"
                android:text="@string/view_all"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true" />

        </RelativeLayout>

        <fragment
            android:id="@+id/candidate_typical_news"
            android:layout_marginTop="10dp"
            android:name="com.example.tv365.fragment.CandidateNewsTypicalFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <RelativeLayout
            android:layout_marginStart="18dp"
            android:layout_marginEnd="18dp"
            android:layout_marginTop="39dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="@string/latest_news"
                android:textSize="18sp"
                android:textColor="@color/purple_300"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tv_view_all_latest"
                android:layout_alignParentEnd="true"
                android:text="@string/view_all"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true" />

        </RelativeLayout>

        <fragment
            android:id="@+id/candidate_latest_news"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="66dp"
            android:name="com.example.tv365.fragment.CandidateNewsTypicalFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</ScrollView>
