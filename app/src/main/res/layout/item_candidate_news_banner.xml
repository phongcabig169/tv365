<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/imgBackgroundRNBanner"
        android:src="@drawable/background_recruitment_news_banner"
        android:scaleType="fitXY"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tvTitleRNBanner"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.24"
        app:layout_constraintTop_toTopOf="@id/imgBackgroundRNBanner"
        app:layout_constraintBottom_toBottomOf="@id/imgBackgroundRNBanner"
        android:text="@string/job_recruitment_news"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tvTitleRNBanner1"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/tvTitleRNBanner"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="@string/find_job"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <androidx.cardview.widget.CardView
        app:cardCornerRadius="20dp"
        app:cardElevation="6dp"
        android:layout_marginTop="21dp"
        android:layout_marginStart="28dp"
        android:layout_marginEnd="28dp"
        app:layout_constraintTop_toBottomOf="@id/tvTitleRNBanner1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_marginStart="28dp"
            android:layout_marginEnd="28dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvJobPositionRN"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:text="@string/candidate_job"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/purple_300"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <ImageView
                android:id="@+id/imgRNBanner"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/tvJobPositionRN"
                app:layout_constraintStart_toStartOf="parent"
                android:src="@drawable/icon_rn_banner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/cvRNBanner"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/imgRNBanner"
                app:cardElevation="8dp"
                app:cardCornerRadius="5dp"
                android:layout_marginTop="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:background="@drawable/bg_change_color_yellow"
                    android:text="@string/view_job"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:paddingStart="24dp"
                    android:paddingEnd="24dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/tvJobNumber"
                app:layout_constraintStart_toStartOf="@id/cvRNBanner"
                app:layout_constraintEnd_toEndOf="@id/cvRNBanner"
                app:layout_constraintBottom_toBottomOf="@id/imgRNBanner"
                android:text="@string/number_job"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/purple_300"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>