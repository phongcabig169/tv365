<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_gray"
    android:weightSum="10"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:background="@color/light_gray"
        android:fitsSystemWindows="true"
        android:orientation="vertical"
        android:paddingTop="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/back_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="20dp"
            android:src="@drawable/long_arrow_left_ic" />

        <TextView
            android:paddingBottom="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="15dp"
            android:gravity="center_horizontal"
            android:text="CẬP NHẬT THÔNG TIN CÁ NHÂN"
            android:textColor="@color/blue"
            android:textSize="18sp" />

        <EditText
            android:layout_width="0dp"
            android:layout_height="0dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="25dp"
            android:text="Họ và tên"
            android:textColor="@color/blue"
            android:textStyle="bold" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginHorizontal="25dp"
            android:layout_marginBottom="10dp"
            android:height="40dp"
            android:background="@drawable/bg_card_edit_profile"
            android:elevation="5dp"
            android:hint="Nhập họ và tên"
            android:paddingHorizontal="15dp"
            android:textColor="@color/black"
            android:textColorHint="@color/black_250"
            android:textCursorDrawable="@drawable/text_cursor"
            android:textSize="15sp"
            tools:ignore="UnusedAttribute" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="25dp"
            android:text="Tỉnh/thành phố"
            android:textColor="@color/blue"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/choose_city"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:focusable="false"
            android:layout_marginHorizontal="25dp"
            android:layout_marginBottom="10dp"
            android:height="40dp"
            android:background="@drawable/bg_card_edit_profile"
            android:drawableEnd="@drawable/arrow_down_gray"
            android:drawableRight="@drawable/arrow_down_gray"
            android:elevation="5dp"
            android:hint="Nhập tỉnh/thành phố"
            android:paddingHorizontal="15dp"
            android:textColor="@color/black"
            android:textColorHint="@color/black_250"
            android:textCursorDrawable="@drawable/text_cursor"
            android:textSize="15sp"
            tools:ignore="UnusedAttribute" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="25dp"
            android:text="Ngày sinh"
            android:textColor="@color/blue"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edit_dob_profile"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginHorizontal="25dp"
            android:layout_marginBottom="10dp"
            android:height="40dp"
            android:background="@drawable/bg_card_edit_profile"
            android:elevation="5dp"
            android:focusable="false"
            android:hint="Nhập ngày sinh"
            android:paddingHorizontal="15dp"
            android:textColor="@color/black"
            android:textColorHint="@color/black_250"
            android:textCursorDrawable="@drawable/text_cursor"
            android:textSize="15sp"
            tools:ignore="UnusedAttribute" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="25dp"
            android:text="Giới tính"
            android:textColor="@color/blue"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edit_gender_profile"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginHorizontal="25dp"
            android:layout_marginBottom="10dp"
            android:height="40dp"
            android:background="@drawable/bg_card_edit_profile"
            android:drawableEnd="@drawable/arrow_down_gray"
            android:drawableRight="@drawable/arrow_down_gray"
            android:elevation="5dp"
            android:focusable="false"
            android:hint="Chọn giới tính"
            android:paddingHorizontal="15dp"
            android:textColor="@color/black"
            android:textColorHint="@color/black_250"
            android:textCursorDrawable="@drawable/text_cursor"
            android:textSize="15sp"
            tools:ignore="UnusedAttribute" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="25dp"
            android:text="Hôn nhân"
            android:textColor="@color/blue"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edit_married_status"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginHorizontal="25dp"
            android:layout_marginBottom="10dp"
            android:height="40dp"
            android:background="@drawable/bg_card_edit_profile"
            android:drawableEnd="@drawable/arrow_down_gray"
            android:drawableRight="@drawable/arrow_down_gray"
            android:elevation="5dp"
            android:focusable="false"
            android:hint="Tình trạng hôn nhân"
            android:paddingHorizontal="15dp"
            android:textColor="@color/black"
            android:textColorHint="@color/black_250"
            android:textCursorDrawable="@drawable/text_cursor"
            android:textSize="15sp"
            tools:ignore="UnusedAttribute" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="25dp"
            android:text="Số điện thoại"
            android:textColor="@color/blue"
            android:textStyle="bold" />

        <EditText
            android:inputType="number"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginHorizontal="25dp"
            android:layout_marginBottom="10dp"
            android:height="40dp"
            android:background="@drawable/bg_card_edit_profile"
            android:elevation="5dp"
            android:hint="Nhập số điện thoại"
            android:paddingHorizontal="15dp"
            android:textColor="@color/black"
            android:textColorHint="@color/black_250"
            android:textCursorDrawable="@drawable/text_cursor"
            android:textSize="15sp"
            tools:ignore="UnusedAttribute" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="25dp"
            android:text="Địa chỉ chi tiết"
            android:textColor="@color/blue"
            android:textStyle="bold" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginHorizontal="25dp"
            android:layout_marginBottom="10dp"
            android:height="40dp"
            android:background="@drawable/bg_card_edit_profile"
            android:elevation="5dp"
            android:hint="Nhập địa chỉ"
            android:paddingHorizontal="15dp"
            android:textColor="@color/black"
            android:textColorHint="@color/black_250"
            android:textCursorDrawable="@drawable/text_cursor"
            android:textSize="15sp"
            tools:ignore="UnusedAttribute" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:paddingVertical="30dp">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_update"
                android:layout_width="220dp"
                android:layout_height="35dp"
                android:background="@drawable/bg_btn_blue_10"
                android:text="Cập Nhật"
                android:textAllCaps="false"
                android:textColor="@color/white" />
        </LinearLayout>

    </LinearLayout>

    <FrameLayout
        android:id="@+id/select_spinner_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>