<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/Light_Pink"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/Light_Pink"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imgBack_ChangeRecruitersPass"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginLeft="19dp"
            android:layout_marginTop="24dp"
            android:src="@drawable/icon_back_color_gray" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:lineHeight="21dp"
            android:text="ĐỔI MẬT KHẨU NHÀ TUYỂN DỤNG"
            android:textColor="@color/Blue"
            android:textSize="18sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="42dp"
            android:gravity="center"
            android:lineHeight="18dp"
            android:text="Vui lòng nhập mật khẩu cũ và xãc nhận\nmật khẩu mới"
            android:textColor="@color/Gray"
            android:textSize="15sp" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="19dp"
            android:layout_marginTop="34dp"
            android:layout_marginRight="19dp"
            app:hintEnabled="false">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edtPass_ChangeRecruitersPass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_color_white"
                android:hint="Mật khẩu cũ"
                android:inputType="textPassword"
                android:lineHeight="18dp"
                android:padding="14dp"
                android:textColor="@color/Gray"
                android:textSize="15sp" />
        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="19dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="19dp"
            app:hintEnabled="false"
            app:passwordToggleEnabled="true">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edtNewPass_ChangeRecruitersPass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_color_white"
                android:hint="Mật khẩu mới"
                android:inputType="textPassword"
                android:lineHeight="18dp"
                android:padding="14dp"
                android:textColor="@color/Gray"
                android:textSize="15sp" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="19dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="19dp"
            app:hintEnabled="false"
            app:passwordToggleEnabled="true">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edtReNewPass_ChangeRecruitersPass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_color_white"
                android:hint="Xác nhận mật khẩu mới"
                android:inputType="textPassword"
                android:lineHeight="18dp"
                android:padding="14dp"
                android:textColor="@color/Gray"
                android:textSize="15sp" />
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/btnChangePass_ChangeRecruitersPass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="79dp"
            android:layout_marginBottom="32dp"
            android:background="@drawable/bg_color_blue"
            android:lineHeight="18dp"
            android:paddingLeft="62dp"
            android:paddingRight="62dp"
            android:text="Đổi mật khẩu"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="15sp" />


    </LinearLayout>

</ScrollView>